{{#each err}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}
	
{{/each}}
<div class="card card-body">
	<h3>Edit Video Ideas</h3>
	<form action="/ideas/{{ideaa._id}}?_method=PUT" method="post">
		<input type="hidden" name="_method" value="PUT">
		<div class="form-group">
			<label for="title"></label>
			<input type="text" class="form-control" name="title" value="{{ideaa.title}}">
		</div>
		<div class="form-group">
			<label for="details">Details</label>
			<textarea class="form-control" name="details" >{{ideaa.details}}</textarea>
		</div>
		<button class="btn btn-primary" type="submit">Submit</button>
	</form>
</div>